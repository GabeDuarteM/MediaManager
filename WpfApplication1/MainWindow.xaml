<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        xmlns:controls="clr-namespace:WpfApplication1;assembly=WpfApplication1"
        xmlns:ViewModels="clr-namespace:WpfApplication1.ViewModels" x:Class="WpfApplication1.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
        <StackPanel.DataContext>
            <ViewModels:MainViewModel />
        </StackPanel.DataContext>
        <Label Content="Nome:" />
        <ComboBox IsEditable="True" x:Name="tbxNome" Text="{Binding Cu, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width="150" />
        <Button Command="{Binding UpdateCommand}" x:Name="btSalvar" Content="Salvar" HorizontalAlignment="Right" />
    </StackPanel>
</Window>