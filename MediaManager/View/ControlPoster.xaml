<UserControl x:Class="MediaManager.View.ControlPoster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MediaManager.ViewModel"
             mc:Ignorable="d" Height="300" Width="200">
    <Grid Margin="15,15,7.5,7.5">
        <Grid.Effect>
            <DropShadowEffect />
        </Grid.Effect>
        <TextBlock>
            <Hyperlink TextDecorations="None" Cursor="Arrow" Command="{Binding AbrirEdicaoCommand}">
                <Image Name="imgPoster" Stretch="Fill"  Source="{Binding Poster.PosterCache, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            </Hyperlink>
        </TextBlock>
    </Grid>
</UserControl>