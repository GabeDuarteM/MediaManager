<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:ConfigurableInputMessageBox"
        x:Class="ConfigurableInputMessageBox.InputMessageBox"
        local:DialogCloser.DialogResult="{Binding DialogResult}"
        Title="{Binding Properties.Title,Mode=TwoWay}" Height="{Binding Properties.Height,Mode=TwoWay}"  Width="{Binding Properties.Width, Mode=TwoWay}"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
    </Window.Background>
    <Grid>
        <xctk:WatermarkTextBox Text="{Binding Properties.InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Validation.ErrorTemplate="{x:Null}" Watermark="{Binding Properties.Message,Mode=TwoWay}" Margin="10" VerticalAlignment="Top" TabIndex="0" />
        <Button Content="{Binding Properties.CancelButtonText,Mode=TwoWay}" Width="{Binding Properties.ButtonWidth,Mode=TwoWay}" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsCancel="True" TabIndex="2" />
        <Button Command="{Binding OkButtonClickCommand}" Content="{Binding Properties.OkButtonText,Mode=TwoWay}" Width="{Binding Properties.ButtonWidth,Mode=TwoWay}" Margin="{Binding Properties.MarginOkButton}" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsDefault="True" TabIndex="1" />
    </Grid>
</Window>