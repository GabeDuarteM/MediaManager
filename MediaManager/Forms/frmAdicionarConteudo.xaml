<Window x:Class="MediaManager.Forms.frmAdicionarConteudo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:properties="clr-namespace:MediaManager.Properties"
        Title="{Binding Source={x:Static properties:Settings.Default}, Path=AppName, StringFormat='Adicionar conteúdo - {0}'}"
        Height="507" Width="829" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
    </Window.Background>
    <Grid>
        <Image Name="imgBanner" HorizontalAlignment="Center" Height="146" Margin="10,10,10,10" VerticalAlignment="Top" Width="792" Source="https://walter.trakt.us/images/shows/000/001/388/banners/original/c53872a7e2.jpg?1420721509" Stretch="Fill" Opacity="0.7">
            <Image.Effect>
                <DropShadowEffect ShadowDepth="2" />
            </Image.Effect>
        </Image>
        <Image Name="imgPoster" HorizontalAlignment="Left" Height="188" Margin="30,20,10,10" VerticalAlignment="Top" Width="125" Source="https://walter.trakt.us/images/shows/000/001/388/posters/thumb/43673ead5d.jpg?1420721508" Stretch="Fill">
            <Image.Effect>
                <DropShadowEffect />
            </Image.Effect>
        </Image>
        <Button Name="btnConfig" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,173,0,0" Height="22" Width="25" Click="btnConfig_Click">
            <Image Source="C:\Users\Gabriel\Desktop\1422789474_icon-ios7-gear-20.png" Height="15" Width="15" />
        </Button>
        <ComboBox Name="cboListaConteudo" VerticalAlignment="Top" HorizontalAlignment="Left" SelectedIndex="0" Margin="200,173,0,0" Width="240" SelectionChanged="cboListaConteudo_SelectionChanged">
            <ComboBoxItem Content="Selecione" />
        </ComboBox>
        <xctk:WatermarkTextBox Name="tbxPasta" Watermark="Pasta..." ToolTip="Pasta..." VerticalAlignment="Top" HorizontalAlignment="Left" Height="22" Width="333" Margin="445,173,0,0" />
        <Button Name="btnPasta" Content="..." ToolTip="Selecionar..." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="777,173,0,0" Height="22" Width="25" Click="btnPasta_Click" />
    	<TextBox Name="tbxSinopse" Margin="10,220,10,40" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        <Button Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="75" Click="btnCancelar_Click" />
        <Button Name="btnSalvar" Content="Salvar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="90,10" Width="75" Click="btnSalvar_Click" />
    </Grid>
</Window>